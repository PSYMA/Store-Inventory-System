<div class="modal fade bd-example-modal-lg" id="confirm_sell_product_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Receipt</h4>
            </div>
            <div class="modal-body">
                <p id="product_name_p"></p>
                <p id="sale_price_p"></p>


<div class="mt-1">
    <table id="example" class="table table-striped table-bordered table-dark text-center" style="width:100%; font-size: 14px; font-family: 'Lucida Console'">
        <thead>
            <tr>
                <th scope="col" style="cursor: pointer">ID</th>
                <th scope="col" style="cursor: pointer">
                    Product Name
                    <button type="button" class="btn btn-outline-success" id="add_product_btn" data-toggle="modal" data-target="#add_product_modal" 
                         data-placement="bottom" title="Add products">
                        <i class="fa fa-plus-square" aria-hidden="true"></i>
                    </button>
                </th>
                <th scope="col" style="cursor: pointer">Cost Price</th>
                <th scope="col" style="cursor: pointer">Sale Price</th>
                <th scope="col" style="cursor: pointer">Quantity</th>
                <th scope="col" style="cursor: pointer">Sold(s)</th>
                <th scope="col" style="cursor: pointer">Profit</th>
                <th scope="col" style="cursor: pointer">Update/Delete/Return/Sell</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col" id="total_profit">₱ 0.00</th>
            </tr>
        </tfoot>
    </table>
</div>

<div class="modal fade bd-example-modal-lg" id="add_product_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Add product(s)</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Cost Price</th>
                            <th scope="col">Sale Price</th>
                            <th scope="col">Quantity</th>
                        </tr>
                    </thead>
                    <tbody id="add_products_tbody"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" data-dismiss="modal" id="save_product_btn" data-toggle="tooltip" data-placement="bottom" title="Confirm add product(s)">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </button>
                <button class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times-circle"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="update_product_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Update product</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Cost Price</th>
                            <th scope="col">Sale Price</th>
                            <th scope="col">Quantity</th>
                        </tr>
                    </thead>
                    <tbody id="update_product_tbody"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" data-dismiss="modal" id="update_product_btn" data-toggle="tooltip" data-placement="bottom" title="Update product">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </button>
                <button class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times-circle"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="confirm_delete_product_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Do you want to delete this product?</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Cost Price</th>
                            <th scope="col">Sale Price</th>
                            <th scope="col">Quantity</th>
                        </tr>
                    </thead>
                    <tbody id="confirm_delete_tbody"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" data-dismiss="modal" id="confirm_delete_product_btn" data-toggle="tooltip" data-placement="bottom" title="Delete product">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </button>
                <button class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times-circle"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="sell_product_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Sell product</h4>
            </div>

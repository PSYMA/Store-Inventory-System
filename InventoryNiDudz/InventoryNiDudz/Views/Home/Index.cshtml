                <p id="total_p"></p>
                <p id="change_p"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" data-dismiss="modal" id="confirm_sell_product_btn" disabled data-toggle="tooltip" data-placement="bottom" title="Confirm sell product">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </button>
                <button class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times-circle"></i>
                </button>
            </div>
        </div>
    </div>
</div>


